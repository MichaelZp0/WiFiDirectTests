<?xml version="1.0" encoding="utf-8" ?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/rounded_button"
    android:backgroundTint="@color/white"
    android:gravity="center"
  >

        <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal"
      android:gravity="center"
    >

            <TextView
        android:id="@+id/textViewTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Timer"
        android:textSize="@dimen/text_size"
        android:fontFamily="@font/onest_medium"
        android:layout_marginRight="15dp"
      />

            <ImageButton
        android:id="@+id/buttonTimer1"
        android:layout_width="140dp"
        android:layout_height="@dimen/label_height"
        android:layout_margin="@dimen/labels_margin"
        android:background="@drawable/timer1"
        android:scaleType="fitCenter"
      />

            <ImageButton
        android:id="@+id/buttonTimer2"
        android:layout_width="140dp"
        android:layout_height="@dimen/label_height"
        android:layout_margin="@dimen/labels_margin"
        android:background="@drawable/timer2"
        android:scaleType="fitCenter"
      />

            <ImageButton
        android:id="@+id/buttonTimer3"
        android:layout_width="140dp"
        android:layout_height="@dimen/label_height"
        android:layout_margin="@dimen/labels_margin"
        android:background="@drawable/timer3"
        android:scaleType="fitCenter"
      />

            <ImageButton
        android:id="@+id/buttonTimer4"
        android:layout_width="140dp"
        android:layout_height="@dimen/label_height"
        android:layout_margin="@dimen/labels_margin"
        android:background="@drawable/timer4"
        android:scaleType="fitCenter"
      />

            <ImageButton
        android:id="@+id/buttonTimer5"
        android:layout_width="140dp"
        android:layout_height="@dimen/label_height"
        android:layout_margin="@dimen/labels_margin"
        android:background="@drawable/timer5"
        android:scaleType="fitCenter"
      />

            <ImageButton
        android:id="@+id/buttonTimer6"
        android:layout_width="140dp"
        android:layout_height="@dimen/label_height"
        android:layout_margin="@dimen/labels_margin"
        android:background="@drawable/timer6"
        android:scaleType="fitCenter"
      />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
