<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Tint for pressed state -->
    <item
    android:color="@color/tasks_bluePressedButton"
    android:state_pressed="true"
  />
    <!-- Tint for disabled state -->
    <item
    android:color="@color/tasks_blueDisabledButton"
    android:state_enabled="false"
  />
    <!-- Tint for default state -->
    <item android:color="@color/tasks_blueButton" />
</selector>
